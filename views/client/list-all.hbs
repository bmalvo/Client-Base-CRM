<h2>Clients list</h2>
    <table>
        <thead>
            <tr>
                <th>
                    e-mail
                </th>
                <th>
                    name
                </th>
                <th>
                    next contact date
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each clients}}
                <tr>
                    <th>
                        <a href="mailto:" target="_blank">{{this.mail}}</a>
                    </th>
                    <td>
                        <a href="/client/{{this.id}}">{{this.name}}</a>
                    </td>
                    <td>
                        {{nextContactAt}}
                    </td>
                    <td>
                        <a href="/client/{{this.id}}">details</a>
                        <form method="post" action="client/{{this.id}}?_method=delete">
                          <button type="submit">delete</button>
                        </form>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>